@model ItemListViewModel

@{
    ViewData["Title"] = "Item List";
}

@if (Model.CartItems.Count > 0)
{
    <table class="table">
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th></th>
            @*<th>Price</th>
            <th>Total</th>*@
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Add" asp-route-id="@item.ItemId">+</a>
                    <a class="btn btn-info btn-sm" asp-action="Decrease" asp-route-id="@item.ItemId">-</a>
                    <a class="btn btn-danger btn-sm" asp-action="Remove" asp-route-id="@item.ItemId">Remove</a>
                </td>
                @*<td>@item.Price.ToString("C2")</td>
                <td>@Model.CartItems.Where(x => x.ItemId == item.ItemId).Sum(x => x.Quantity * x.Price).ToString("C2")</td>*@
            </tr>
        }
        @*<tr>
            <td class="text-right" colspan="4">Grand Total: @Model.GrandTotal.ToString("C2")</td>
        </tr>*@
        <tr>
            <td class="text-right" colspan="4">
                <a class="btn btn-danger" asp-action="Clear">Clear Item List</a>
                <a class="btn btn-primary" href="#">Submit Request</a>
            </td>
        </tr>
    </table>


}
else
{
    <h3 class="display-4 text-center">Your Item List is empty.</h3>
}
